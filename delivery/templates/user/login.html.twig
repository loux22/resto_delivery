{% extends 'base.html.twig' %}

{% block link %}
<link rel="stylesheet" href="{{ asset('css/loginUser.css') }}">
<link rel="stylesheet" href="{{ asset('css/navbar.css') }}">
{% endblock %}
{% block title %}Login{% endblock %}

{% block body %}
{% if currentRoute == "login" %}
<body style="background-color: #2CCE80">
{% elseif currentRoute == "loginRestaurent" %}
<body style="background-color: rgb(252, 207, 165)">
{% else %}
<body style="background-color: rgb(65, 176, 250)">
{% endif %}

<form action="{{ path('login') }}" method="post">
    {% if currentRoute == "login" %}
    <h1 class="title">CONNEXION</h1>
    {% elseif currentRoute == "loginRestaurent" %}
    <h1 class="title">CONNEXION RESTAURENT</h1>
    {% else %}
    <h1 class="title">CONNEXION ADMIN</h1>
    {% endif %}
    <div class="container__body">
        <div class="container__body--1">
            <span>Mail</span>
            <input placeholder="Par ex.tdupont@exemple.fr" required name="_username" type="text" value="{{lastUsername}}"
            style="padding-left: 30px;">
        </div>
        <div class="container__body--2">
            <span>Mot de passe</span>
            <input placeholder="*********" required name="_password" type="password"
            style="padding-left: 30px;">
        </div>
    </div>
    <div class="container__bottom">
        <div class="button__top">
            <button class="favorite styled" type="submit">Se connecter</button>
        </div><br>
    </div>

    {% if currentRoute == "login" %}
    <div class="button__bottom">
        <a href="{{path('registerMember')}}" >Si vous n’avez pas de compte <br> Y Eats</a>
    </div>
    {% elseif currentRoute == "loginRestaurent" %}
    <div class="button__bottom">
        <a href="{{path('registerRestorer')}}" >Si vous n’avez pas de compte Y Eats</a>
    </div>
    {% endif %}
    <br>
    <br>
    <br>

</form>
{% endblock %}