{% extends 'base.html.twig' %}

{% block title %}login{% endblock %}

{% block body %}
<form action="{{ path('login') }}" method="post">
    {% if currentRoute == "login" %}
    <h1>Login</h1>
    {% elseif currentRoute == "loginRestaurent" %}
    <h1>Login restaurent</h1>
    {% else %}
    <h1>Login admin</h1>
    {% endif %}

    <span>Mail</span>
    <input placeholder="Mail" required name="_username" type="text" value="{{lastUsername}}">

    <span>Mot de passe</span>
    <input placeholder="mot de passe" required name="_password" type="password">

    <button type="submit">
        Se connecter
    </button>

    {% if currentRoute == "login" %}
    <a href="{{path('registerMember')}}" >tu n'a pas de compte ?</a>
    {% elseif currentRoute == "loginRestaurent" %}
    <a href="{{path('registerRestorer')}}" >tu n'a pas de compte ?</a>
    {% endif %}
    
</form>
{% endblock %}