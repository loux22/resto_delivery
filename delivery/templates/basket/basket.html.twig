{% extends 'base.html.twig' %}

{% block title %}Basket{% endblock %}

{% block body %}
<h1>Votre panier</h1>
{% if basket | length > 0 %}
<h3>{{restorer.name}}</h3>
<h3>{{restorer.address}}</h3>

<table class="table">
    <thead>
        <tr>
            <th>image</th>
            <th>Plat</th>
            <th>Prix</th>
            <th>Quantité</th>
            <th>Total</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% for b in basket %}
        <tr>

            {% if b.dish.img == "default.png" %}
            <td>
                <a href="{{ path('restorerDish', { 'id' : b.dish.restorer.id})}}">
                    <img src="{{ asset('/img/')}}{{b.dish.img}}" alt="">
                </a>
            </td>
            {% else %}
            <td>
                <a href="{{ path('restorerDish', { 'id' : b.dish.restorer.id})}}">
                    <img src="{{ asset('/dish/' ~ b.dish.id  ~ '/img/' ~ b.dish.img)}}" alt="">
                </a>
            </td>
            {% endif %}

            <td>{{b.dish.name}}</td>
            <td>{{b.dish.price}} €</td>
            <td>{{b.quantity}}</td>
            <td>{{b.dish.price * b.quantity}} €</td>
            <td>
                <a href="{{ path('basket_remove', { 'id' : b.dish.id})}}" class="btn btn-danger btn-sm">
                    <img src="{{ asset('/img/close.png')}}" alt="">
                </a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
    <tfoot>
        <tr>
            <td colspan="4" class="text-right">Frais de livraison :</td>
            <td>2,50 €</td>
            <td></td>
        </tr>
        <tr>
            <td colspan="4" class="text-right">Total :</td>
            <td>{{total + 2.50}} €</td>
            <td></td>
        </tr>
    </tfoot>
</table>
<form action="" method="post">
<button type="submit" name="command">Commander</button>
</form>
{% else %}
<p>votre panier est vide</p>
{% endif %}


{% endblock %}